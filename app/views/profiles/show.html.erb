<div class="content-wrapper">
  <div class="content">
    <div class="image">
      <%= image_tag "mako.jpeg" %> 
    </div>
    <div class="information">
      <div class="company">
        <%= @profile.company %>
      </div>
      <div class="information-list">
        <div class="information-block">
          <p>代表</p>
          <p><%= @profile.name %></p>
        </div>
        <div class="information-block">
          <p>従業員</p>
          <p><%= @profile.employee_num %>人</p>
        </div>
        <div class="information-block">
          <p>営業時間</p>
          <p><%= @profile.start_time %> ~ <%= @profile.ending_time %></p>
        </div>
        <div class="information-block">
          <p>定休日</p>
          <p><%= @profile.regular_holiday %></p>
        </div>
        <div class="information-block">
          <p>電話番号</p>
          <p><%= @profile.tel %></p>
        </div>
        <div class="information-block">
          <p>所在地</p>
          <p>〒 <%= @profile.first_postal_code %> - <%= @profile.last_postal_code %></br>大阪府渋谷区一丁目2-3</p>
        </div>
      </div>
    </div>
  </div>
  <div class="button">
    <% if current_user.id == @profile.user_id %>
      <%= link_to "プロフィールを変更", edit_profile_path(@profile.id) %>
    <% else %>
      <%= link_to "メッセージ", new_profile_path %>
      <%= link_to "フォロー", new_profile_path %>
      <%= link_to "フォロー中", new_profile_path %>
    <% end %>
  </div>
  <div class="explanation">
    <p>
      <%= @profile.explanation %>
    </p>
  </div>
  <div class="item-list">
    <ul>
      <li><%= link_to "実績" %></li>
      <li><%= link_to "予定表" %></li>
      <li><%= link_to "求人" %></li>
    </ul>
  </div>
</div>